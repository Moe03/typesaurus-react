{
  "compilerOptions": {
    "rootDirs": ["."],
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib/reactopod",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "skipLibCheck": true
  },
  "exclude": ["lib", "node_modules"]
}
